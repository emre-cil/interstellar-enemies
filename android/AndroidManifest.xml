<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.interstellarenemies">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:resizeableActivity="false"
        android:supportsRtl="true"
        android:theme="@style/Theme.InterstellarEnemies">
        <activity android:name=".etc.LoadingPage"
            android:screenOrientation="portrait"/>
        <activity android:name=".etc.GameEndDialog"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SinglePlayerPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".init.mail.ResetPassPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".init.home.HomePage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".init.mail.SignInPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".init.mail.RegisterPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".init.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>